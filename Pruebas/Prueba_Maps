<!-- crear "scrip.js"-->
function iniciarMap(){
    var coord = {lat:-17.3836364 ,lng: -66.1572799};
    var map = new google.maps.Map(document.getElementById('map'),{
      zoom: 10,
      center: coord
    });
    var marker = new google.maps.Marker({
      position: coord,
      map: map
    });
}
